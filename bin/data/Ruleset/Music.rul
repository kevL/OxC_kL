    files: [ PSTACTIC ]
  - type: TAC_BATTLE_MARS2
    files: [ PSTACTIC2 ]
  - type: TAC_BATTLE_BASEDEFENSE
    files: [ LCTACTIC ]
  - type: TAC_BATTLE_BASEASSAULT
    files: [ LCTACTIC ]
  - type: TAC_BATTLE_TERRORSITE
    files: [ LCTACTIC ]
  - type: TAC_BATTLE_UFOCRASHED
    files: [ GMTACTIC, 12TACTIC ]
    terrain: [ ATLANTDESERT, COMRCURBAN, CULTA, CULTAFARMA, CULTAFARMB, DAWNURBANA, DAWNURBANB, DESERT, DESERTMOUNT, FOREST, FORESTMOUNT, INDUSTRIALURBAN, JUNGLE, MADURBAN, MARS, MOUNT, MUJUNGLE, NATIVEURBAN, POLAR, POLARMOUNT, PORTURBAN, RAILYARDURBAN, UBASE, URBAN, XBASE ]
  - type: TAC_BATTLE_UFOLANDED
    files: [ GMTACTIC, 12TACTIC ]
    terrain: [ ATLANTDESERT, COMRCURBAN, CULTA, CULTAFARMA, CULTAFARMB, DAWNURBANA, DAWNURBANB, DESERT, DESERTMOUNT, FOREST, FORESTMOUNT, INDUSTRIALURBAN, JUNGLE, MADURBAN, MARS, MOUNT, MUJUNGLE, NATIVEURBAN, POLAR, POLARMOUNT, PORTURBAN, RAILYARDURBAN, UBASE, URBAN, XBASE ]

  - type: TAC_DEBRIEFING
    files: [ GMMARS, PSMARS, LCDEBRIEF ]
  - type: TAC_AWARDS
    files: [ 12MARS ]

  - type: BASE_AWARDS
    files: [ 12MARS ]
  - type: BASE_MEMORIAL
    files: [ PSGEO4 ]
  - type: UFOPAEDIA
