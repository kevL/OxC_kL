# 'type' is defined in ResourcePack.cpp
# 'files' are pathed to the data/Sound folder
# 'terrain' is found in rulesets under 'terrains' & 'alienDeployments'
music:
  - type: START_INTRO1
    files: [ GMINTRO1 ]
  - type: START_INTRO2
    files: [ GMINTRO2 ]
  - type: START_INTRO3
    files: [ GMINTRO3 ]
  - type: START_MAINMENU
    files: [ LCUFOPED ]

  - type: GEO_GLOBE
    files: [ GMGEO1, GMGEO2, PSGEO1, PSGEO2, PSGEO3, LCGEO1, LCGEO2 ]
  - type: GEO_INTERCEPT
    files: [ GMINTER, PSINTER, LCINTER ]
  - type: GEO_MONTHLYREPORT
    files: [ 12GEO2 ]
  - type: GEO_BRIEFING
    files: [ GMDEFEND, PSDEFEND, LCDEFEND ]
  - type: GEO_BRIEF_MARS1
    files: [ GMNEWMAR, PSNEWMAR ]
  - type: GEO_BRIEF_MARS2
    files: [ GMNEWMAR, PSNEWMAR ]
  - type: GEO_BRIEF_BASEDEFENSE
    files: [ GMENBASE, PSENBASE ]
  - type: GEO_BRIEF_BASEASSAULT
    files: [ GMENBASE, PSENBASE ]
  - type: GEO_BRIEF_TERRORSITE
    files: [ LCMARS ]
  - type: GEO_BRIEF_UFOCRASHED
    files: [ GMDEFEND, PSDEFEND, LCDEFEND ]
  - type: GEO_BRIEF_UFOLANDED
    files: [ GMDEFEND, PSDEFEND, LCDEFEND ]

  - type: TAC_BATTLE
    files: [ GMTACTIC, PSTACTIC, PSTACTIC2, LCTACTIC, 12TACTIC ]
